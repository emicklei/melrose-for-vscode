{
    "scopeName": "source.melrose",
    "patterns": [{ "include": "#expression" }],
    "repository": {
        "expression": {
            "patterns": [{ "include": "#letter" }, { "include": "#paren-expression" }]
        },
        "letter": {
            "match": "flatten|reverse|velocity|biab|echo|sequence|interval|sequencemap|joinmap|chord|pitch|loop|octavemap|octave|undynamic|record|channel|go|join|scale|play|serial|begin|repeat|bpm|note|parallel|end",
            "name": "keyword.letter"
        },
        "paren-expression": {
            "begin": "\\(",
            "end": "\\)",
            "beginCaptures": {
                "0": { "name": "punctuation.paren.open" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.paren.close" }
            },
            "name": "expression.group",
            "patterns": [{ "include": "#expression" }]
        }
    }
}