{
    "scopeName": "source.melrose",
    "patterns": [{ "include": "#expression" }],
    "repository": {
        "expression": {
            "patterns": [{ "include": "#letter" }, { "include": "#paren-expression" }]
        },
        "letter": {
            "match": "channel|bpm|echo|play|undynamic|interval|joinmap|widechord|go|record|velocity|octave|flatten|chord|note|scale|pitch|repeat|loop|serial|begin|end|biab|sequencemap|reverse|join|sequence|parallel",
            "name": "keyword.letter"
        },
        "paren-expression": {
            "begin": "\\(",
            "end": "\\)",
            "beginCaptures": {
                "0": { "name": "punctuation.paren.open" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.paren.close" }
            },
            "name": "expression.group",
            "patterns": [{ "include": "#expression" }]
        }
    }
}