{
    "scopeName": "source.melrose",
    "patterns": [{ "include": "#expression" }],
    "repository": {
        "expression": {
            "patterns": [{ "include": "#letter" }, { "include": "#paren-expression" }]
        },
        "letter": {
            "match": "pitch|go|serial|record|interval|echo|sequence|flatten|begin|channel|progression|joinmap|chord|play|octave|parallel|loop|reverse|velocity|join|bpm|undynamic|sequencemap|pipeline|octavemap|repeat|biab|scale|feed|note|end",
            "name": "keyword.letter"
        },
        "paren-expression": {
            "begin": "\\(",
            "end": "\\)",
            "beginCaptures": {
                "0": { "name": "punctuation.paren.open" }
            },
            "endCaptures": {
                "0": { "name": "punctuation.paren.close" }
            },
            "name": "expression.group",
            "patterns": [{ "include": "#expression" }]
        }
    }
}