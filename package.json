{
    "name": "melrose-for-vscode",
    "displayName": "Melrose for VSCode",
    "description": "Interactive music coding with Melrose",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.44.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:melrose-for-vscode.helloWorld"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "melrose",
            "extensions": [".mel", ".melrose"],
            "aliases": ["Melrose"]
        }],
        "snippets": [{
            "language": "melrose",
            "path": "./snippets/snippets.json"
        }],
        "colors": [{
                "id": "melrose.executedBackground",
                "description": "Background decoration color for executed lines",
                "defaults": {
                    "dark": "#0d00ff55",
                    "light": "#00d9ff55",
                    "highContrast": "#b3ff00ba"
                }
            },
            {
                "id": "melrose.executeFailBackground",
                "description": "Background decoration color for executed lines that failed",
                "defaults": {
                    "dark": "#e03112cb",
                    "light": "#ce381dbe",
                    "highContrast": "#ff0000f3"
                }
            }
        ],
        "commands": [{
            "command": "melrose-for-vscode.helloWorld",
            "title": "Melrose"
        }],
        "keybindings": [{
            "command": "melrose-for-vscode.helloWorld",
            "key": "ctrl+e",
            "mac": "cmd+e"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.44.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.26.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "axios": "^0.19.2"
    }
}